RED='\033[0;31m'
GREEN='\033[0;32m'
NC='\033[0m'

# 检查当前目录是否为一个目录
if [ ! -d "$PWD" ]; then
    echo -e "${RED}错误：当前路径不是一个目录${NC}"
    exit 1
fi

# 遍历当前目录及其子目录下的所有文件，并添加执行权限和设置权限为777
echo -e "${GREEN}正在为当前目录及其子目录中的所有文件添加执行权限…${NC}"
find "$PWD" -type f -exec chmod 777 "{}" \; -exec chmod +x "{}" \;
echo -e "${GREEN}所有文件的执行权限已更新……${NC}"